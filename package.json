{
  "name": "online-netdisk",
  "version": "1.0.0",
  "description": "在线网盘系统 - 基于React + Express + PostgreSQL的云存储平台",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "build": "cd client && npm run build",
    "start": "cd server && npm start",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "check": "cd client && npm run type-check && cd ../server && npm run type-check"
  },
  "keywords": [
    "netdisk",
    "cloud-storage",
    "file-sharing",
    "react",
    "express",
    "postgresql"
  ],
  "author": "Developer",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "lucide-react": "^0.539.0",
    "pg": "^8.16.3"
  }
}